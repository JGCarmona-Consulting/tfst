{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch API (.NET Core)",
        "type": "coreclr",
        "request": "launch",
        "preLaunchTask": "build",
        "program": "${workspaceFolder}/TheFullStackTeam.API/bin/Debug/net8.0/TheFullStackTeam.API.dll",
        "args": [],
        "cwd": "${workspaceFolder}/TheFullStackTeam.API",
        "stopAtEntry": false,
        "serverReadyAction": {
          "action": "openExternally",
          "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
        },
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        },
        "sourceFileMap": {
          "/Views": "${workspaceFolder}/TheFullStackTeam.API/Views"
        }
      }
    ]
  }
  